<?php 
 
 echo "Exercico 1 <br>";

 $var = 5;
 $tabu = 0;

 echo"<br>usando o while<br>";
 while ($tabu <= 10) {
    
    echo $var ."x ".$tabu."=". $var * $tabu. "<br>";
    $tabu++;   

 }

 $tabu = 0;

 echo"<br>usando do while<br>";

 do {
    
    echo $var ."x ".$tabu."=". $var * $tabu. "<br>";
    $tabu++;  

 } while ($tabu <= 10);

 $tabu = 0;

 echo"<br>usando for <br>";

 for ($i=10; $tabu<=$i; $tabu++) {

    echo $var ."x ".$tabu."=". $var * $tabu. "<br>";

 }


?>
